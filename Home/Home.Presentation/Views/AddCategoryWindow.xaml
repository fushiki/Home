<Window x:Class="Home.Presentation.Views.AddCategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Home.Presentation.Views"
        mc:Ignorable="d"
        Title="Dodaj Kategorię" Height="150" Width="200">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top">
            <Label x:Name="LabelName" Content="Nazwa"/>
            <TextBox x:Name="TextBoxName" Height="23" TextWrapping="Wrap" Margin="5,0,5,0" Text="{Binding Name}"/>
        </StackPanel>
        <Button DockPanel.Dock="Bottom" x:Name="ButtonOK" Content="OK" HorizontalAlignment="Right"  Width="30" Margin="0,5,5,5" VerticalAlignment="Bottom" Command="{Binding CommandOK}"/>
        


    </DockPanel>
</Window>
